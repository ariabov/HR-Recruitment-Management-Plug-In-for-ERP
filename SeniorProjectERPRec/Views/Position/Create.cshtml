@model SeniorProjectERPRec.Models.Position
@{
	ViewBag.Title = "Create";
}

	<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
	<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="control-panel ui-widget-header ui-corner-all">
	<span class="left">Add New Position</span> <span class="right">@Html.ActionLink("Back to List", "Index", null, new { @class = "back-button" })</span>
</div>
@*<div style="clear: both; height: 10px"></div>*@
<div class="form-content ui-widget ui-widget-content ui-corner-all">
	@*<h2>
	Create New Position</h2>*@
	@using (Html.BeginForm())
 {
		@Html.ValidationSummary(true)
		
		<div class="left">
			<div class="editor-label">
				Job Title:
			</div>
			<div class="editor-field">
				@Html.EditorFor(model => model.Title)
				@Html.ValidationMessageFor(model => model.Title)
			</div>
			<div class="editor-label">
				Dapartment:
			</div>
			<div class="editor-field">
				@Html.DropDownListFor(model => model.DepartmentId, ViewBag.Department as SelectList)
				@Html.ValidationMessageFor(model => model.Department)
			</div>
			<div class="editor-label">
				Manager's Name:
			</div>
			<div class="editor-field">
				@Html.EditorFor(model => model.ManagerName)
				@Html.ValidationMessageFor(model => model.ManagerName)
			</div>
			<div class="editor-label" >
				Application Due Date:
			</div>
			<div class="editor-field">
				@Html.EditorFor(model => model.CloseDate)
				
			</div>
			<div class="editor-label">
				Salary:
			</div>
			<div class="editor-field">
				@Html.EditorFor(model => model.Salary)
				@Html.ValidationMessageFor(model => model.Salary)
			</div>
			<div class="editor-label">
				Job Code:
			</div>
			<div class="editor-field">
				@Html.EditorFor(model => model.JobCode)
				@Html.ValidationMessageFor(model => model.JobCode)
			</div>
		</div>
		<div class="right">
			<div class="editor-label" style="width:150px;">
				Job Description:
			</div>
			<div class="editor-field">
				@Html.TextAreaFor(model => model.JobDescription, new { @class = "textarea-description" })
				@Html.ValidationMessageFor(model => model.JobDescription)
			</div>
		</div>
		<div class="save">
			<input class="save-button" type="submit" value="Create" />
		</div>
		
 }
	<div style="clear: both; height: 10px">
	</div>
</div>

